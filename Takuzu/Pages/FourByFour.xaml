<Page x:Class="Halcyon.TakuzuGame.Pages.FourByFour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Halcyon.TakuzuGame.Pages"
      xmlns:renderer="clr-namespace:Halcyon.TakuzuGame.Renderer" 
      xmlns:asd="clr-namespace:Halcyon.TakuzuGame.Logic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FourByFour"
      SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">

    <!--<StackPanel Background="WhiteSmoke">-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="grid" Background="Wheat" Height="250" Width="250" Margin="50" Grid.Row="0">
            <!--<renderer:Display x:Name="display" />-->
        </Grid>
        <asd:NavigationButton Text="Back" ImageSource="/Images/TileEmpty.png" 
                               Command="NavigationCommands.BrowseBack" Height="200" Width="200" 
                                Grid.Row="1"/>


    </Grid>
</Page>
